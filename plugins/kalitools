#!/usr/bin/env zsh

#
# KALITOOLS
#
echo "\n#\n# INSTALLING KALI-TOOLS\n#\n"
cd /opt

echo "# AutoRecon"
echo "# enum4linux-ng"
sudo git clone https://github.com/cddmp/enum4linux-ng.git
