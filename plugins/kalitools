echo "# nessus"
echo "# nmapAutomator"
sudo rm -r nmapAutomator
sudo git clone https://github.com/21y4d/nmapAutomator.git
sudo ln -s $(pwd)/nmapAutomator/nmapAutomator.sh /usr/local/bin/

echo "# nishang"
echo "# PowerSploit"


